{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"outDir": "out/server",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"types": ["node"],
		"rootDir": ".",
		"strict": true,   
		"esModuleInterop": true,
        "skipLibCheck": true,
		"baseUrl": ".", // Add baseUrl for path mapping
        "paths": {
            "shared/*": ["shared/*"] // Map "shared" to the shared directory
        }
	},
	"include": [
        "src/**/*.ts", // Server-side code
        "shared/**/*.ts"       // Include shared files
    ],
    "exclude": [
        "node_modules",
    ]
}
