{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"outDir": "out/server",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,   
		"esModuleInterop": true,
        "skipLibCheck": true
	},
	"include": [
        "src/**/*.ts", // Server-side code
    ],
    "exclude": [
        "node_modules",
    ]
}
